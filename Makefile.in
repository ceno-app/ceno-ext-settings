include $(topsrcdir)/config/rules.mk

# Define the output path for the XPI
XPI_OUTPUT_PATH = $(OBJDIR)/dist/bin/distribution/extensions/ceno@equalit.ie.xpi

# Target to compress the .xpi
package-xpi:
	@echo "Compressing the Ceno .xpi..."
	@cd $(DIST)/bin/distribution/extensions && $(PYTHON3) package_xpi.py $(XPI_OUTPUT_PATH)
